<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_send_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_edit_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <View
            android:id="@+id/v_item_send_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/iv_item_send_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_item_send_tomorrow_21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/tv_item_send_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내일로 보내기"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/gray_800"
            android:layout_marginStart="21dp"
            app:layout_constraintStart_toEndOf="@id/iv_item_send_tomorrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_edit_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/layout_send_tomorrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <View
            android:id="@+id/v_item_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/iv_sc_bottom_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_swipe_menu_edit_18dp"
            app:layout_constraintStart_toStartOf="@id/v_item_edit"
            app:layout_constraintTop_toTopOf="@id/v_item_edit"
            app:layout_constraintBottom_toBottomOf="@id/v_item_edit"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/tv_sc_bottom_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:textSize="14sp"
            android:textColor="@color/gray_800"
            app:layout_constraintStart_toEndOf="@id/iv_sc_bottom_edit"
            app:layout_constraintTop_toTopOf="@id/v_item_edit"
            app:layout_constraintBottom_toBottomOf="@id/v_item_edit"
            android:layout_marginStart="24dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_edit_delete"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@id/layout_edit_edit"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <View
        android:id="@+id/v_item_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/iv_sc_bottom_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_swipe_menu_delete_18dp"
        app:layout_constraintStart_toStartOf="@id/v_item_delete"
        app:layout_constraintTop_toTopOf="@id/v_item_delete"
        app:layout_constraintBottom_toBottomOf="@id/v_item_delete"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tv_sc_bottom_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제하기"
        android:textSize="14sp"
        android:textColor="@color/gray_800"
        app:layout_constraintStart_toEndOf="@id/iv_sc_bottom_delete"
        app:layout_constraintTop_toTopOf="@id/v_item_delete"
        app:layout_constraintBottom_toBottomOf="@id/v_item_delete"
        android:layout_marginStart="24dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>