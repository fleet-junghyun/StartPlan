<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_item_storage_icon_view"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/shape_schedule_item_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/tv_item_storage_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/v_item_storage_icon_view"
        app:layout_constraintEnd_toEndOf="@+id/v_item_storage_icon_view"
        app:layout_constraintBottom_toBottomOf="@+id/v_item_storage_icon_view"
        app:layout_constraintTop_toTopOf="@id/v_item_storage_icon_view"
        />


    <TextView
        android:id="@+id/tv_item_storage_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="멀티 비타민"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/v_item_storage_icon_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_item_storage_add"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:id="@+id/iv_item_storage_add"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_item_storage_add_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="19dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>