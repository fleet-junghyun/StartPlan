<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_premium_top_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <View
            android:id="@+id/v_premium_top_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageView
            android:id="@+id/iv_premium_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:src="@drawable/ic_premium_star_30dp"
            app:layout_constraintBottom_toBottomOf="@id/v_premium_top_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_premium_top_space" />

        <TextView
            android:id="@+id/tv_premium_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="프리미엄"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/v_premium_top_space"
            app:layout_constraintStart_toEndOf="@id/iv_premium_star"
            app:layout_constraintTop_toTopOf="@id/v_premium_top_space" />

        <ImageView
            android:id="@+id/iv_premium_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_premium_exit_30dp"
            app:layout_constraintBottom_toBottomOf="@id/v_premium_top_space"
            app:layout_constraintEnd_toEndOf="@id/v_premium_top_space"
            app:layout_constraintTop_toTopOf="@id/v_premium_top_space" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/v_premium_ad_item_comment"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_premium_menu_off"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_premium_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        />

    <View
        android:id="@+id/v_premium_ad_item_emoji_space"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_schedule_item_emoji"
        app:layout_constraintStart_toStartOf="@id/v_premium_ad_item_comment"
        app:layout_constraintTop_toTopOf="@id/v_premium_ad_item_comment"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_ad_item_comment"
        android:layout_marginStart="17dp"
        />

    <TextView
        android:id="@+id/tv_premium_ad_item_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="📱"
        app:layout_constraintStart_toStartOf="@id/v_premium_ad_item_emoji_space"
        app:layout_constraintTop_toTopOf="@id/v_premium_ad_item_emoji_space"
        app:layout_constraintEnd_toEndOf="@id/v_premium_ad_item_emoji_space"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_ad_item_emoji_space"
        />


    <TextView
        android:id="@+id/tv_premium_ad_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="광고가 제거됩니다."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/v_premium_ad_item_emoji_space"
        app:layout_constraintTop_toTopOf="@id/v_premium_ad_item_comment"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_ad_item_comment"
        android:layout_marginStart="17dp"
        />



    <View
        android:id="@+id/v_premium_ad_item_skill"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_premium_menu_off"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/v_premium_ad_item_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        />

    <View
        android:id="@+id/v_premium_ad_item_skill_emoji"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_schedule_item_emoji"
        app:layout_constraintStart_toStartOf="@id/v_premium_ad_item_skill"
        app:layout_constraintTop_toTopOf="@id/v_premium_ad_item_skill"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_ad_item_skill"
        android:layout_marginStart="17dp"
        />

    <TextView
        android:id="@+id/tv_premium_ad_item_skill_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="👏"
        app:layout_constraintStart_toStartOf="@id/v_premium_ad_item_skill_emoji"
        app:layout_constraintTop_toTopOf="@id/v_premium_ad_item_skill_emoji"
        app:layout_constraintEnd_toEndOf="@id/v_premium_ad_item_skill_emoji"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_ad_item_skill_emoji"
        />


    <TextView
        android:id="@+id/tv_premium_ad_skill_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기능에 제한이 사라집니다."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/v_premium_ad_item_skill_emoji"
        app:layout_constraintTop_toTopOf="@id/v_premium_ad_item_skill"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_ad_item_skill"
        android:layout_marginStart="17dp"
        />

    <View
        android:id="@+id/v_premium_cost_layout"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_premium_cost_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_premium_ad_item_skill"
        app:layout_constraintBottom_toTopOf="@id/tv_premium_pay_explain"

        />

    <View
        android:id="@+id/v_premium_cost_emoji_space"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_schedule_item_emoji"
        app:layout_constraintTop_toTopOf="@id/v_premium_cost_layout"
        app:layout_constraintStart_toStartOf="@id/v_premium_cost_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎉"
        app:layout_constraintStart_toStartOf="@id/v_premium_cost_emoji_space"
        app:layout_constraintEnd_toEndOf="@id/v_premium_cost_emoji_space"
        app:layout_constraintTop_toTopOf="@id/v_premium_cost_emoji_space"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_cost_emoji_space"
        />

    <TextView
        android:id="@+id/tv_premium_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blue_100"
        app:layout_constraintStart_toEndOf="@id/v_premium_cost_emoji_space"
        app:layout_constraintTop_toTopOf="@id/v_premium_cost_layout"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        />

    <TextView
        android:id="@+id/tv_premium_price_comment_2500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₩ 5,900"
        app:layout_constraintStart_toStartOf="@id/tv_premium_price_title"
        app:layout_constraintTop_toBottomOf="@id/tv_premium_price_title"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="13dp"
        android:textColor="@color/blue_100"
        />

    <TextView
        android:id="@+id/tv_premium_pay_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 앱을 삭제하시면 초기화됩니다. \n* 추후 가격이 변동 될 수 있습니다."
        android:textSize="12sp"
        android:textColor="@color/gray_600"
        app:layout_constraintTop_toBottomOf="@id/tv_premium_price_comment_2500"
        app:layout_constraintStart_toStartOf="@id/tv_premium_price_comment_2500"
        android:layout_marginTop="13dp"
        />



    <TextView
        android:id="@+id/tv_premium_pay_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/blue_100"
        android:text="커피 한잔 가격으로 한 달간 편하게 사용하세요."
        app:layout_constraintStart_toStartOf="@id/v_premium_cost_layout"
        app:layout_constraintTop_toBottomOf="@id/v_premium_cost_layout"
        app:layout_constraintEnd_toEndOf="@id/v_premium_cost_layout"
        android:layout_marginTop="14dp"
        />

    <View
        android:id="@+id/v_premium_pay_btn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_premium_pay_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_premium_pay_explain"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/tv_premium_pay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제하기"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/v_premium_pay_btn"
        app:layout_constraintTop_toTopOf="@id/v_premium_pay_btn"
        app:layout_constraintBottom_toBottomOf="@id/v_premium_pay_btn"
        app:layout_constraintEnd_toEndOf="@id/v_premium_pay_btn"
        />



</androidx.constraintlayout.widget.ConstraintLayout>