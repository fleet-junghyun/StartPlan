<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_plan_add"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/shape_ripple_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_schedule"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/iv_main_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:src="@drawable/ic_main_add_20dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_plan_add"
        app:layout_constraintEnd_toEndOf="@id/v_plan_add"
        app:layout_constraintStart_toStartOf="@id/v_plan_add"
        app:layout_constraintTop_toTopOf="@id/v_plan_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="추가하기"
        android:textColor="@color/blue_100"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_plan_add"
        app:layout_constraintLeft_toRightOf="@id/iv_main_add"
        app:layout_constraintTop_toTopOf="@id/v_plan_add" />

    <View
        android:id="@+id/space_rv"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/rv_schedule"
        app:layout_constraintBottom_toTopOf="@id/v_plan_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_schedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/space_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>