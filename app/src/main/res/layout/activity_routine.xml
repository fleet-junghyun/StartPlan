<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_routine_top_bar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/iv_routine_exit"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_routine_back_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="20dp"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:paddingEnd="17dp"
            />

        <TextView
            android:id="@+id/tv_routine_title_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ðŸ’Š"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/iv_routine_exit"
            app:layout_constraintTop_toTopOf="@id/iv_routine_exit"
            app:layout_constraintBottom_toBottomOf="@id/iv_routine_exit"
            />

        <TextView
            android:id="@+id/tv_routine_title_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ì•½"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_routine_title_emoji"
            app:layout_constraintTop_toTopOf="@id/tv_routine_title_emoji"
            app:layout_constraintBottom_toBottomOf="@id/tv_routine_title_emoji"
            app:layout_constraintEnd_toStartOf="@id/iv_routine_storage"
            android:paddingStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/iv_routine_storage"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_storage_routine_20dp"
            android:padding="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_routine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_routine_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_routine_todo_add"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_routine_todo_add"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/shape_routine_add_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <EditText
            android:id="@+id/et_routine_input"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:textColor="@color/blue_100"
            android:background="@null"
            android:hint="ì„¸ë¶€ê³„íšì„ ìž…ë ¥í•˜ì„¸ìš”."
            android:textSize="16sp"
            android:focusableInTouchMode="true"
            android:textCursorDrawable="@drawable/shape_add_edit"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="7dp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_routine_complete"
            />

        <ImageView
            android:id="@+id/iv_routine_complete"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_routine_input"
            android:src="@drawable/ic_routine_todo_complete_off_28dp"
            android:padding="18dp"

            />




    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>