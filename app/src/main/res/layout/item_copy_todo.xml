<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:paddingStart="20dp"
    android:paddingTop="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_copy_item_todo_remove"
        android:background="@drawable/shape_schedule_item_container"
        >

        <View
            android:id="@+id/v_copy_item_todo_emoji_space"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_schedule_item_emoji"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp"
            />

        <TextView
            android:id="@+id/tv_copy_item_todo_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/v_copy_item_todo_emoji_space"
            app:layout_constraintTop_toTopOf="@id/v_copy_item_todo_emoji_space"
            app:layout_constraintBottom_toBottomOf="@id/v_copy_item_todo_emoji_space"
            app:layout_constraintEnd_toEndOf="@id/v_copy_item_todo_emoji_space"
            />

        <TextView
            android:id="@+id/tv_copy_item_todo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9급 준비"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            app:layout_constraintStart_toEndOf="@id/v_copy_item_todo_emoji_space"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_copy_item_todo_remove"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_copy_item_remove_20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>