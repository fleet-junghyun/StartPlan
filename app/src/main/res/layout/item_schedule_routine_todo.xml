<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="7dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_routine_todo"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <View
            android:id="@+id/v_item_routine_todo_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_schedule_item_container"
            />

        <View
            android:id="@+id/v_item_routine_todo_percentage_space"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_add_emoji_container"
            app:layout_constraintStart_toStartOf="@id/v_item_routine_todo_container"
            app:layout_constraintTop_toTopOf="@id/v_item_routine_todo_container"
            app:layout_constraintBottom_toBottomOf="@id/v_item_routine_todo_container"
            android:layout_marginStart="17dp"
            />

        <TextView
            android:id="@+id/tv_item_routine_todo_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/v_item_routine_todo_percentage_space"
            app:layout_constraintStart_toStartOf="@id/v_item_routine_todo_percentage_space"
            app:layout_constraintEnd_toEndOf="@id/v_item_routine_todo_percentage_space"
            app:layout_constraintBottom_toBottomOf="@id/v_item_routine_todo_percentage_space"
            android:textSize="10sp"
            android:textColor="@color/blue_100"
            android:textStyle="bold"
            tools:text="30%"
            />

        <View
            android:id="@+id/v_item_routine_emoji_container"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_schedule_item_emoji"
            app:layout_constraintStart_toEndOf="@id/v_item_routine_todo_percentage_space"
           app:layout_constraintTop_toTopOf="@id/v_item_routine_todo_percentage_space"
            app:layout_constraintBottom_toBottomOf="@id/v_item_routine_todo_percentage_space"
            android:layout_marginStart="6dp"
            />

        <TextView
            android:id="@+id/tv_item_routine_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="ðŸ’Š"
            app:layout_constraintStart_toStartOf="@id/v_item_routine_emoji_container"
            app:layout_constraintTop_toTopOf="@id/v_item_routine_emoji_container"
            app:layout_constraintEnd_toEndOf="@id/v_item_routine_emoji_container"
            app:layout_constraintBottom_toBottomOf="@id/v_item_routine_emoji_container"
            />

        <TextView
            android:id="@+id/tv_item_routine_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/v_item_routine_emoji_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v_item_routine_space"
            android:layout_marginStart="17dp"
            tools:text="ì•½"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <View
            android:id="@+id/v_item_routine_space"
            android:layout_width="23dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />





    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>