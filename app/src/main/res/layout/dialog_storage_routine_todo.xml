<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_routine_storage"
        android:layout_width="0dp"
        android:layout_height="600dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_add_container"
        >

        <View
            android:id="@+id/v_routine_storage_bar"
            android:layout_width="86dp"
            android:layout_height="3dp"
            android:background="@drawable/shape_storage_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            />

        <ImageView
            android:id="@+id/iv_routine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_storage_routine_title_24dp"
            app:layout_constraintTop_toBottomOf="@id/v_routine_storage_bar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="26dp"
            />

        <TextView
            android:id="@+id/tv_routine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="루틴 보관함"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_routine_title"
            app:layout_constraintTop_toTopOf="@id/iv_routine_title"
            app:layout_constraintBottom_toBottomOf="@id/iv_routine_title"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/tv_routine_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_routine_title"
            app:layout_constraintTop_toBottomOf="@id/tv_routine_title"
            android:text="이전에 적었던 루틴이 자동 저장됩니다."
            android:textSize="12sp"
            android:textColor="@color/gray_700"
            android:textStyle="normal"
            android:layout_marginTop="24dp"
            />

        <View
            android:id="@+id/v_routine_storage_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_routine_comments"
            android:layout_marginTop="13dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/gray_100"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_storage_routine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/v_routine_storage_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_storage_routine_todo"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>